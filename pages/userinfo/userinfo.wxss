.writeInformation{
  width: 100%;
  height: 500rpx;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  padding-top: 0rpx;
  align-items: center;
}
.username{
  height: 40rpx;
  margin-left:20rpx; 
  font-size: 30rpx;
  margin-top: -50rpx;
}
.nickname{
  font-size: 42rpx;
  font-weight: bold;
}
.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  /* margin: 0 auto; */
  /* box-shadow: 10px 10px 5px -5px rgba(0, 0, 0, 0.5); */
}
image{
  width: 100%;
  height: 100%;
}
.chooseBox{
  margin: -100rpx auto 0;
  background-color: #fff;
  height: 783rpx;
  width: 90%;
  display: flex;
  box-sizing: border-box;
  padding: 15rpx;
  flex-wrap:wrap; 
  box-shadow: 3px 5px 3px -5px rgba(0, 0, 0, 0.5);
  border-radius: 10rpx;
}
