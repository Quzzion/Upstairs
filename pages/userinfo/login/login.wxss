.inputarea{
  margin: 180rpx auto 0;
  width: 88%;
  height:200rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding-left: 50rpx;  
  border-radius: 10rpx;
}
.inputarea input{
  border: none;
  outline: none;
  height: 50%;
  font-size: 36rpx;
  padding-left: 0;
  width: 100%;
}
.inputarea .line{
  width: 100%;
  height: 1px;
  background-color: #f5f5f5;
}
.button{
  height: 100rpx;
  width: 70%;
  margin: 40rpx auto 0;
  color: #fff;
  background-color: #1baad5;
  text-align: center;
  line-height: 100rpx;
  border-radius: 5rpx;
}
.bottom{
  margin-top: 20rpx;
  padding: 0 20rpx;
  color: #1baad5;
  text-align: center;
  font-size: 36rpx;
}
.code{
  margin-bottom: 15rpx;
}