.inputarea{
  margin: 180rpx auto 0;
  width: 88%;
  background-color: #fff;
  box-sizing: border-box;
  padding-left: 35rpx;  
  border-radius: 10rpx;
}
.inputarea input{
  border: none;
  outline: none;
  height: 90rpx;
  font-size: 36rpx;
  padding-left: 0;
  width: 74%;
  align-items: center;
  display: flex;
  box-sizing: border-box;
}
.inputarea .inputItem{
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  font-size: 34rpx;
  align-items: center;
}
.inputarea .line{
  width: 100%;
  height: 1px;
  background-color: #f5f5f5;
}
.identify{
  position: relative;
}
.identify .sendCode{
  position: absolute;
  right: 15.5px;
  z-index: 99;
  color: #1baad5;

}
.placeholder{
  font-size: 30rpx;
  /* color: #f5f5f5; */
}
.button{
  height: 100rpx;
  width: 70%;
  margin: 40rpx auto 0;
  color: #fff;
  background-color: #1baad5;
  text-align: center;
  line-height: 100rpx;
  border-radius: 5rpx;
}
.back{
  color:  #1baad5;
  font-size: 30rpx;
  margin: 20rpx auto;
  width: 200rpx;
  text-align: center;
}