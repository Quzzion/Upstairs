/**app.wxss**/
page{
  background-color:  #f5f5f5;
  color: #000;
  position: relative;
  z-index: 9999998;
}

.writeInformation{
  padding-top: 50rpx;
  font-size: 50rpx;
  width:100%;
  height: 250rpx;
  background-color: #1baad5;
  color: #fff;
}
.informationItem{
  margin-top: 30rpx;
  width: 100%;
  padding: 16rpx;
  box-sizing: border-box;
  background-color: #fff;
  box-shadow: 3px 5px 3px -5px rgba(0, 0, 0, 0.5);
  text-align: center;
  border-radius: 10rpx;
  font-size: 36rpx;
}
input{
  height: 50rpx;
  width: 600rpx;
  background-color: #fff;
  border: none;
  border-radius: 25rpx;
  outline: none;
  font-size: 30rpx;
  box-sizing: border-box;
  padding-left: 60rpx
}